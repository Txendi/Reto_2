RewriteEngine on

#Si no existe la url como fichero
# RewriteCond %{REQUEST_FILENAME} !-f
#Y no acaba en /
# RewriteCond %{REQUEST_URI} !(/$|\.) 
#Le ponemos un slash final
# RewriteRule (.*) %{REQUEST_URI}/ [R=301] 
RewriteRule ^auth/register$ registro.php [L]
RewriteRule ^auth/login$ login.php [L]


RewriteRule ^auth/register$ bbdd.php?action=registrar [NC,L]
RewriteRule ^auth/login$ bbdd.php [NC,L]

RewriteRule ^games/?(\w+)$ juegos.php?q=$1 [NC,L]
RewriteRule ^games/?$ juegos.php?q= [NC,L]

RewriteRule ^games/(\d+)$ bbdd.php [NC,L]

RewriteRule ^events(?:\/?page=(\d+))?$ bbdd.php [NC,L]

RewriteRule ^events/(\d+)$ bbdd.php [NC,L]
RewriteRule ^users/me/events$ bbdd.php [NC,L]
RewriteRule ^user/(\w+)$ usuario.php?id=$1 [NC,L]
RewriteRule ^events/(\d+)/singup$ bbdd.php [NC,L]
# RewriteRule ^/events/(\d+)/singup$ bbdd.php

RewriteRule ^/?deuda/?$ ./principal.php [NC,L]
RewriteRule ^/?deuda/(\d+)/?$ ./principal.php?com=$1 [NC,L]
RewriteRule ^/?deuda/(\d+)/(\d+)/?$  ./principal.php?com=$1&prov=$2 [NC,L]
RewriteRule ^/?deuda/(\d+)/(\d+)/(\d+)/?$  ./principal.php?com=$1&prov=$2&ayto=$3 [NC,L]