RewriteBase http://localhost
RewriteEngine on
#Si no existe la url como fichero
# RewriteCond %{REQUEST_FILENAME} !-f
#Y no acaba en /
# RewriteCond %{REQUEST_URI} !(/$|\.) 
#Le ponemos un slash final
# RewriteRule (.*) %{REQUEST_URI}/ [R=301] 
RewriteRule ^\/auth\/register$ bbdd.php?action=registrar
RewriteRule ^\/auth\/login$ bbdd.php
RewriteRule ^\/games\/(\w)$ bbdd.php?action=listaEventos
RewriteRule ^\/games\/(\d+)$ bbdd.php
RewriteRule ^\/events(?:\/?page=(\d+))?$ bbdd.php
RewriteRule ^\/events\/(\d+)$ bbdd.php
RewriteRule ^\/users\/me\/events$ bbdd.php
RewriteRule ^\/events\/(\d+)\/singup$ bbdd.php
RewriteRule ^\/events\/(\d+)\/singup$ bbdd.php

RewriteRule ^/?deuda/?$ ./principal.php [NC,L]
RewriteRule ^/?deuda/(\d+)/?$ ./principal.php?com=$1 [NC,L]
RewriteRule ^/?deuda/(\d+)/(\d+)/?$  ./principal.php?com=$1&prov=$2 [NC,L]
RewriteRule ^/?deuda/(\d+)/(\d+)/(\d+)/?$  ./principal.php?com=$1&prov=$2&ayto=$3 [NC,L]