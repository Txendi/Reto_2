Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"
RewriteEngine on

#REGISTRO
RewriteRule ^auth/login$ login.php [L]

#LOGIN
RewriteRule ^auth/register$ registro.php [L]

#JUEGOS
RewriteRule ^games/?(\w+)$ juegos.php?q=$1 [NC,L]
RewriteRule ^games/?$ juegos.php?q= [NC,L]
RewriteRule ^games/(\d+)$ juegos.php?id=$1 [NC,L]

#EVENTOS
RewriteRule ^events/?$ eventos.php [NC,L]
RewriteRule ^events/tipos/?$ eventos_tipos.php [NC,L]

